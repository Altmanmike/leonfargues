{% extends 'base.html.twig' %}

{% block title %}Rechercher{% endblock %}

{% block body %}

    <div class="container my-5">         

        <div class="card" style="width: 18rem;">
            <img src="{{ film.image }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ film.titre }}</h5>
                <p class="card-text">{{ film.synopsis }}</p>
                <p class="badge text-bg-secondary">{{ film.annee }}</p>
            </div>
        </div>

    </div>

{% endblock %}
